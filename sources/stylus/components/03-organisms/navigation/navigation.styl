header
	
	.region-navigation
		grid-column 1/4
		margin 0
		padding 0
		list-style none
		overflow hidden
		clear both
		height 0
		max-height 0
		transition max-height 1s cubic-bezier(.17,.67,.83,.67)
		
		nav
			ul
				padding 0
				margin 0
				li
					&.nav-item
						padding 0
						position relative
						border-bottom 1px solid white
						span
							padding 12px
						&.is-active-trail
							a
								color primary
						a
							font-family serif-default, serif-family
							text-decoration none
							padding 0 15px 15px 16px
							text-align left
							color text
							display block
						&:first-child
							a
								padding 4px 15px 15px 16px
